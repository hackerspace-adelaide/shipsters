<%- model_class = Stop -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:voyage_id) %></dt>
      <dd><pre class="prettyprint"><%= @stop.voyage_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:port_id) %></dt>
      <dd><pre class="prettyprint"><%= @stop.port_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:arrival) %></dt>
      <dd><pre class="prettyprint"><%= @stop.arrival %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:departure) %></dt>
      <dd><pre class="prettyprint"><%= @stop.departure %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:embarked) %></dt>
      <dd><pre class="prettyprint">
        <% @stop.embarked.each do |p| %>
          <%= p.name %>
        <% end %>
      </pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:disembarked) %></dt>
      <dd><pre class="prettyprint">
        <% @stop.disembarked.each do |p| %>
          <%= p.name %>
        <% end %>
      </pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              stops_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stop_path(@stop), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stop_path(@stop),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>